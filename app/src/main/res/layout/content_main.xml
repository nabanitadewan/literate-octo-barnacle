<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:textSize="24sp"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/yard1"
        android:layout_toStartOf="@+id/yard1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        android:id="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/editText"
        android:layout_toEndOf="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_toRightOf="@+id/editText" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/background"
        android:scaleType="centerCrop"

        android:layout_below="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
<TextView
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:text="currency(in rupees)"
    android:layout_below="@id/editText"
    android:textStyle="italic"/>
    <Button
        android:layout_width="150dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="dollar"
        android:id="@+id/button"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:onClick="dollar"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_alignParentRight="true"
        android:textSize="20sp"
        android:text="length(in metre) "
        android:textStyle="italic"/>
    <Button
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="pound"
        android:id="@+id/button2"
        android:onClick="pound"
        android:layout_alignTop="@+id/yard1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="yen"
        android:id="@+id/yen1"
        android:onClick="yen"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="dirham"
        android:id="@+id/dirham1"
        android:onClick="dirham"
        android:textStyle="bold"
        android:layout_below="@+id/yen1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="feet"
        android:id="@+id/feet1"
        android:onClick="feet"
        android:textStyle="bold"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="yard"
        android:id="@+id/yard1"
        android:onClick="yard"
        android:textStyle="bold"
        android:layout_below="@+id/feet1"
        android:layout_alignLeft="@+id/feet1"
        android:layout_alignStart="@+id/feet1" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="inch"
        android:id="@+id/inch1"
        android:onClick="inch"
        android:textStyle="bold"
        android:layout_above="@+id/mile1"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="mile"
        android:id="@+id/mile1"
        android:onClick="mile"
        android:textStyle="bold"
        android:layout_alignTop="@+id/dirham1"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <Button
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        android:id="@+id/reset"
        android:onClick="reset"
        android:layout_below="@+id/dirham1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

</RelativeLayout>
